<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>
    <key>UIFileSharingEnabled</key>
    <true/>
    <key>NSCameraUsageDescription</key>
    <string>The app needs to use your camera to attach photos to checklist items. Four photos per item.</string>
    <key>NSPhotoLibraryAddUsageDescription</key>
    <string>The app needs access to your photo library to choose an existing photo.</string>
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>The app needs to access your location so that we can add GPS coordinates, closest tide and wind info to your Notes and Emergency Text.</string>
    <key>NSMicrophoneUsageDescription</key>
    <string>The app needs your permission to record audio when you create a voice note.</string>
    <key>NSPhotoLibraryUsageDescription</key>
    <string>The app needs access to your photo library so you can attach an existing photo to your checklist item.</string>
    <key>NSContactsUsageDescription</key>
    <string>The app needs access to your contacts to quickly import contact information for emergency and operational use.</string>
    <key>UIApplicationSceneManifest</key>
    <dict>
        <key>UIApplicationSupportsMultipleScenes</key>
        <false/>
        <key>UISceneConfigurations</key>
        <dict>
            <key>UIWindowSceneSessionRoleApplication</key>
            <array>
                <dict>
                    <key>UISceneConfigurationName</key>
                    <string>Default Configuration</string>
                    <key>UISceneDelegateClassName</key>
                    <string>$(PRODUCT_MODULE_NAME).SceneDelegate</string>
                </dict>
            </array>
        </dict>
    </dict>
    
   

    <key>CFBundleDocumentTypes</key>
    <array>
        <!-- Ship Pilot Checklist (keep this for backwards compatibility) -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>Ship Pilot Checklist</string>
            <key>CFBundleTypeDescription</key>
            <string>Ship Pilot Checklist File</string>
            <key>CFBundleTypeIconFiles</key>
            <array/>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>shipchecklist</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.JillRussell.Ship-Pilot-Checklists.shipchecklist</string>
            </array>
            <key>LSHandlerRank</key>
            <string>Owner</string>
        </dict>
        
        <!-- JSON Files (for contacts and universal compatibility) -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>JSON File</string>
            <key>CFBundleTypeDescription</key>
            <string>JavaScript Object Notation File</string>
            <key>CFBundleTypeIconFiles</key>
            <array/>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>json</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.json</string>
            </array>
            <key>LSHandlerRank</key>
            <string>Alternate</string>
        </dict>
        
        <!-- CSV Files -->
        <dict>
            <key>CFBundleTypeName</key>
            <string>CSV File</string>
            <key>CFBundleTypeDescription</key>
            <string>Comma Separated Values File</string>
            <key>CFBundleTypeIconFiles</key>
            <array/>
            <key>CFBundleTypeExtensions</key>
            <array>
                <string>csv</string>
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.comma-separated-values-text</string>
            </array>
            <key>LSHandlerRank</key>
            <string>Owner</string>
        </dict>
    </array>

    <!-- Simplified UTExportedTypeDeclarations (remove shipcontacts, keep shipchecklist for backwards compatibility) -->
    <key>UTExportedTypeDeclarations</key>
    <array>
        <dict>
            <key>UTTypeIdentifier</key>
            <string>com.JillRussell.Ship-Pilot-Checklists.shipchecklist</string>
            <key>UTTypeDescription</key>
            <string>Ship Pilot Checklist</string>
            <key>UTTypeConformsTo</key>
            <array>
                <string>public.data</string>
                <string>public.content</string>
                <string>public.composite-content</string>
            </array>
            <key>UTTypeTagSpecification</key>
            <dict>
                <key>public.filename-extension</key>
                <array>
                    <string>shipchecklist</string>
                </array>
                <key>public.mime-type</key>
                <array>
                    <string>application/x-shipchecklist</string>
                    <string>application/json</string>
                </array>
            </dict>
        </dict>
    </array>
    
    <!-- Keep your existing UTImportedTypeDeclarations -->
    <key>UTImportedTypeDeclarations</key>
    <array>
        <dict>
            <key>UTTypeIdentifier</key>
            <string>public.comma-separated-values-text</string>
            <key>UTTypeDescription</key>
            <string>CSV File</string>
            <key>UTTypeConformsTo</key>
            <array>
                <string>public.text</string>
            </array>
            <key>UTTypeTagSpecification</key>
            <dict>
                <key>public.filename-extension</key>
                <array>
                    <string>csv</string>
                </array>
                <key>public.mime-type</key>
                <array>
                    <string>text/csv</string>
                </array>
            </dict>
        </dict>
    </array>
</dict>
</plist>
